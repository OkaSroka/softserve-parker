{
  "compilerOptions": {
    "outDir": "dist",
    "incremental": true,

    //Required for typegraphql
    "module": "commonjs",
    "target": "es2016",
    "lib": ["es2016", "esnext.asynciterable"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    //End of required for typegraphql

    "esModuleInterop": true, //Required for async/await
    "sourceMap": true, //for debug
    "noUnusedLocals": true
  }
}
